name = Ant Omega
description = Please provide a description for your theme.
base theme = omega
screenshot = screenshot.png
engine = phptemplate
core = 7.x

; ========================================
; Stylesheets
; ========================================
stylesheets[all][] = css/ant-omega.normalize.css
stylesheets[all][] = css/ant-omega.hacks.css
stylesheets[all][] = css/ant-omega.styles.css
stylesheets[all][] = css/ant-omega.no-query.css

; ========================================
; Scripts
; ========================================
scripts[] = js/ant-omega.behaviors.js
scripts[] = js/jquery-2.1.3.min.js
scripts[] = js/parallax.js

; ========================================
; Regions
; ========================================
regions[branding] = Branding
regions[header] = Header
regions[navigation] = Navigation
regions[highlighted] = Highlighted
regions[help] = Help
regions[content] = Content
regions[sidebar_first] = First Sidebar
regions[sidebar_second] = Second Sidebar
regions[footer] = Footer

; ========================================
; Layout
; ========================================
layout[home][stylesheets][all][] = css/layouts/home/ant-home.layout.css
layout[contact][stylesheets][all][] = css/layouts/contact/ant-contact.layout.css
layout[concepts][stylesheets][all][] = css/layouts/concepts/ant-concepts.layout.css
layout[sidebar][stylesheets][all][] = css/layouts/sidebar/ant-sidebar.layout.css
layout[wide][stylesheets][all][] = css/layouts/wide/ant-wide.layout.css
layout[uks][stylesheets][all][] = css/layouts/uks/ant-uks.layout.css
layout[imageGallery][stylesheets][all][] = css/layouts/imageGallery/ant-imageGallery.layout.css
layout[imageHolder][stylesheets][all][] = css/layouts/imageHolder/ant-imageHolder.layout.css

; ========================================
; Breakpoints
; ========================================
breakpoints[mobile] = all and (min-width: 0px) and (max-width: 799px)
breakpoints[tab] = all and (min-width: 800px) and (max-width: 979px)
breakpoints[tabwide] = all and (min-width: 980px) and (max-width: 1199px)
breakpoints[desk] = all and (min-width: 1200px)

